---
import BaseHead from "../../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import NavBar from "../../components/navigation/NavBar.astro";
import { Image } from "astro:assets";

const projects = (
  await getCollection("projects", (project) => {
    const matches =
      project.id.startsWith("en/") ||
      !project.data.lang ||
      project.data.lang === "en";
    return matches;
  })
).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const getSlug = (id: any) => {
  const parts = id.split("/");
  return parts.length > 1 ? parts[1] : id;
};

function getTagColor(tag: string) {
  const colors: { [key: string]: string } = {
    css: "bg-blue-300",
    html: "bg-orange-300",
    javascript: "bg-yellow-300",
    typescript: "bg-blue-400",
    python: "bg-green-300",
    dart: "bg-blue-500",
    java: "bg-red-500",
    csharp: "bg-purple-500",
    "c++": "bg-blue-600",
    go: "bg-green-400",
    rust: "bg-orange-400",
    php: "bg-blue-200",
    kotlin: "bg-green-200",
  };

  return colors[tag.toLowerCase()] || "bg-gray-300";
}
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} | Projects`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <NavBar />

    <main class="max-w-5xl mx-auto px-6 pt-24 pb-24">
      <div class="mb-16 flex flex-col items-center">
        <h1 class="text-5xl font-bold mb-6 tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-white to-zinc-500">
          Projects
        </h1>
        <p class="text-zinc-400 mb-10 max-w-2xl text-center text-lg leading-relaxed">
          A selection of projects I've worked on, ranging from web applications to specialized tooling and digital experiments.
        </p>
        
        <div class="w-full max-w-2xl flex flex-col md:flex-row gap-4 items-center">
          <div class="relative w-full group">
            <div class="absolute inset-y-0 left-4 flex items-center pointer-events-none text-zinc-500 group-focus-within:text-zinc-300 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
            </div>
            <input
              type="text"
              id="project-search"
              placeholder="Search projects..."
              aria-label="Search projects"
              class="w-full pl-12 pr-4 py-4 rounded-full bg-zinc-900/40 border border-zinc-700/40 text-white placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-zinc-500/20 focus:border-zinc-500/40 transition-all backdrop-blur-md shadow-2xl"
            />
          </div>

          <div class="flex items-center gap-3 px-6 py-4 rounded-full bg-zinc-900/40 border border-zinc-700/40 backdrop-blur-md whitespace-nowrap">
            <input
              type="checkbox"
              id="sort-newest"
              checked
              class="w-5 h-5 rounded-full border-zinc-700 bg-zinc-950 text-white checked:bg-white focus:ring-0 focus:ring-offset-0 transition-all cursor-pointer appearance-none checked:border-transparent relative after:content-[''] after:hidden checked:after:block after:absolute after:left-1/2 after:top-1/2 after:-translate-x-1/2 after:-translate-y-1/2 after:w-2 after:h-2 after:bg-black after:rounded-full"
            />
            <label for="sort-newest" class="text-sm font-medium text-zinc-400 cursor-pointer select-none">Sort by newest</label>
          </div>
        </div>
      </div>

      <div
        class="grid grid-cols-1 md:grid-cols-2 gap-8"
        id="projects-list"
      >
        {
          projects.map((project) => (
            <div
              class="project-item group relative bg-zinc-900/40 border border-zinc-700/40 rounded-3xl overflow-hidden backdrop-blur-md hover:border-zinc-500/50 transition-all duration-500 flex flex-col"
              data-title={project.data.title.toLowerCase()}
              data-description={project.data.description.toLowerCase()}
              data-tags={project.data.tags.join(", ")}
              data-date={project.data.date.valueOf().toString()}
            >
              <a href={`/projects/${getSlug(project.id)}/`} class="block aspect-[16/10] overflow-hidden">
                {project.data.heroImage ? (
                  <Image
                    src={project.data.heroImage}
                    alt={project.data.title}
                    width={1024}
                    height={640}
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                  />
                ) : (
                  <div class="w-full h-full bg-zinc-800 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-zinc-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><circle cx="9" cy="9" r="2"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/></svg>
                  </div>
                )}
              </a>
              
              <div class="p-8 flex flex-col flex-grow">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <h3 class="text-2xl font-bold mb-2">
                      <a
                        href={`/projects/${getSlug(project.id)}/`}
                        class="hover:text-zinc-300 transition-colors"
                      >
                        {project.data.title}
                      </a>
                    </h3>
                    <div class="text-sm font-medium text-zinc-500">
                      <FormattedDate date={project.data.date} lang="en" />
                    </div>
                  </div>
                  
                  {project.data.archived && (
                    <span class="px-3 py-1 text-[10px] font-bold uppercase tracking-wider bg-red-500/10 text-red-500 border border-red-500/20 rounded-full">
                      Archived
                    </span>
                  )}
                </div>

                <p class="text-zinc-400 mb-8 line-clamp-2 text-base leading-relaxed flex-grow">
                  {project.data.description}
                </p>

                <div class="flex flex-wrap gap-2 mt-auto">
                  {project.data.tags.map((tag) => (
                    <span class="px-3 py-1 text-xs font-medium bg-zinc-800/50 text-zinc-300 border border-zinc-700/50 rounded-full backdrop-blur-sm">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <div id="empty-state" class="hidden py-32 text-center">
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-zinc-900/50 border border-zinc-800 mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 text-zinc-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
        </div>
        <h3 class="text-2xl font-bold text-white mb-2">No projects found</h3>
        <p class="text-zinc-500">Try adjusting your search or filters</p>
      </div>
    </main>

    <script is:inline>
      function debounce(func, wait) {
        let timeout;
        return (...args) => {
          clearTimeout(timeout);
          timeout = setTimeout(() => func(...args), wait);
        };
      }

      function init() {
        const projectsList = document.getElementById("projects-list");
        const projectItems = Array.from(document.querySelectorAll(".project-item"));
        const searchInput = document.getElementById("project-search");
        const sortNewestCheckbox = document.getElementById("sort-newest");
        const emptyState = document.getElementById("empty-state");

        if (!projectsList || !searchInput || !sortNewestCheckbox) return;

        function refresh() {
          const query = searchInput.value.toLowerCase().trim();
          const sortByNewest = sortNewestCheckbox.checked;

          const filtered = projectItems.filter(item => {
            const title = item.dataset.title || "";
            const description = item.dataset.description || "";
            const tags = item.dataset.tags || "";
            return title.includes(query) || description.includes(query) || tags.includes(query);
          });

          filtered.sort((a, b) => {
            const dateA = parseInt(a.dataset.date || "0");
            const dateB = parseInt(b.dataset.date || "0");
            return sortByNewest ? dateB - dateA : dateA - dateB;
          });

          projectItems.forEach(item => item.style.display = "none");

          if (filtered.length > 0) {
            emptyState.classList.add("hidden");
            projectsList.classList.remove("hidden");
            filtered.forEach(item => {
              item.style.display = "flex";
              projectsList.appendChild(item);
            });
          } else {
            emptyState.classList.remove("hidden");
            projectsList.classList.add("hidden");
          }
        }

        searchInput.addEventListener("input", debounce(refresh, 250));
        sortNewestCheckbox.addEventListener("change", refresh);
        
        refresh();
      }

      document.addEventListener("DOMContentLoaded", init);
      document.addEventListener("astro:after-swap", init);
    </script>
  </body>
</html>
