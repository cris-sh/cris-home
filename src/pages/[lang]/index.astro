---
import BaseHead from "../../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import NavBar from "../../components/navigation/NavBar.astro";
import { Image } from "astro:assets";
import enuxAvatar from "../../../public/img/avatar/enux.webp";

import { useTranslations } from "../../i18n/utils";
import { languages } from "../../i18n/pages";

import MarkerHighlight from "../../components/creative/MarkerHighlight.astro";
import MarkerArrow from "../../components/creative/MarkerArrow.astro";
import Scribble from "../../components/creative/Scribble.astro";
import RoughBorder from "../../components/creative/RoughBorder.astro";

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as keyof typeof languages);
---

<!doctype html>
<html lang={lang}>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Architects+Daughter&display=swap" rel="stylesheet">
  </head>
  <body class="relative min-h-screen">
    <NavBar />
    
    <main class="max-w-4xl mx-auto px-4 pt-6 md:pt-32 pb-48 md:pb-8 relative overflow-x-hidden">
      <!-- Decorational Scribbles - Anchored to content -->
      <Scribble type="plus" className="absolute top-0 left-2 text-zinc-800 -z-10 opacity-30 md:opacity-50 overflow-hidden" size="24px" />
      <Scribble type="circle" className="absolute top-10 right-0 text-zinc-800 -z-10 opacity-30 md:opacity-50 overflow-hidden" size="80px" />
      <Scribble type="squiggles" className="absolute bottom-40 left-0 text-zinc-800 -z-10 opacity-30 md:opacity-50 overflow-hidden" size="100px" />

      <!-- Hero Section with Bento Grid -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 auto-rows-min md:auto-rows-[120px] relative">
        
        <!-- Profile Tile -->
        <RoughBorder className="md:col-span-2 md:row-span-2">
          <div class="h-full flex flex-col justify-end p-6 rounded-3xl bg-zinc-900/40 border border-zinc-700/40 backdrop-blur-xl group overflow-hidden relative shadow-2xl min-h-[220px] md:min-h-0">
            <div class="absolute top-4 right-4 p-2 md:p-6 opacity-40 md:opacity-20 group-hover:opacity-100 transition-opacity duration-500">
              <Image
                src={enuxAvatar}
                alt="Cristian's avatar"
                width="80"
                height="80"
                class="rounded-2xl rotate-12 group-hover:rotate-0 transition-transform duration-500 shadow-lg md:w-[100px] md:h-[100px]"
                loading="eager"
              />
            </div>
            <div class="relative z-10 mt-auto">
              <h1 class="text-2xl md:text-3xl font-bold mb-1 tracking-tight">{t("home.name")}</h1>
              <div class="inline-block relative">
                <p class="text-base md:text-lg text-indigo-300 font-medium relative z-10">{t("home.title")}</p>
                <MarkerHighlight color="#6366f1" className="absolute -bottom-1 left-0 w-full h-2 opacity-50" />
              </div>
            </div>
          </div>
        </RoughBorder>

        <!-- About List Tile (Large) -->
        <div class="md:col-span-2 md:row-span-3 p-6 md:p-8 rounded-3xl bg-zinc-900/20 border border-zinc-700/40 backdrop-blur-md shadow-lg relative flex flex-col min-h-[300px] md:min-h-0">
          <Scribble type="stars" className="absolute top-6 right-6 text-indigo-500/20" size="24px" />
          <h2 class="text-xs font-bold uppercase tracking-[0.2em] text-zinc-500 mb-4 md:mb-6">
            {lang === 'es' ? 'Sobre mí' : 'About'}
          </h2>
          <div class="space-y-4 md:space-y-6 flex-1 overflow-visible">
            {
              t("home.about").map((paragraph: string, i: number) => (
                <p class="text-zinc-300 text-sm md:text-[15px] leading-relaxed relative">
                  {i === 0 && (
                    <span class="font-['Architects_Daughter'] text-indigo-400 absolute -left-6 md:-left-8 top-0 text-xl md:text-2xl hidden sm:block select-none opacity-30">"</span>
                  )}
                  {paragraph}
                </p>
              ))
            }
          </div>
          <p class="font-['Architects_Daughter'] text-indigo-400/30 text-[11px] mt-4 self-end select-none rotate-2 italic">
            {lang === 'es' ? 'un poco sobre mí...' : 'a bit about me...'}
          </p>
        </div>

        <!-- CV Link Tile -->
        <a href={`/${lang}/cv`} class="md:col-span-1 md:row-span-1 flex items-center gap-3 p-4 rounded-3xl bg-zinc-900/60 border border-zinc-700/40 hover:bg-zinc-800/60 hover:-translate-y-1 transition-all duration-300 shadow-md group relative">
          <div class="p-3 bg-zinc-800 rounded-2xl group-hover:bg-indigo-500/20 transition-colors">
            <svg viewBox="0 0 24 24" width="20" height="20" stroke="currentColor" stroke-width="2" fill="none" class="text-indigo-400"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line></svg>
          </div>
          <span class="font-bold">curriculum</span>
          <MarkerArrow className="absolute -top-10 -right-6 text-indigo-500/20 hidden md:block" rotate="120" />
        </a>

        <!-- GitHub Tile -->
        <a href="https://github.com/cris-sh" target="_blank" class="md:col-span-1 md:row-span-1 flex items-center gap-3 p-4 rounded-3xl bg-zinc-900/60 border border-zinc-700/40 hover:bg-zinc-800/60 hover:-translate-y-1 transition-all duration-300 shadow-md group relative">
          <div class="p-3 bg-zinc-800 rounded-2xl group-hover:bg-white/10 transition-colors">
            <svg viewBox="0 0 24 24" width="20" height="20" stroke="currentColor" stroke-width="2" fill="none" class="text-zinc-100"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
          </div>
          <span class="font-bold">github</span>
          <span class="absolute -bottom-6 left-4 text-[10px] text-zinc-600 font-['Architects_Daughter'] font-bold hidden md:block whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity">
            {lang === 'es' ? 'código y cosas' : 'code & stuff'}
          </span>
        </a>

         <!-- Email Tile -->
         <RoughBorder className="md:col-span-2 md:row-span-1">
          <a href="mailto:contact@enux.dev" class="h-full flex items-center justify-between p-4 rounded-3xl bg-zinc-900/60 border border-zinc-700/40 hover:bg-zinc-800/60 transition-all duration-300 shadow-md group relative">
            <div class="flex items-center gap-3">
              <div class="p-3 bg-zinc-800 rounded-2xl group-hover:bg-emerald-500/20 transition-colors">
                <svg viewBox="0 0 24 24" width="20" height="20" stroke="currentColor" stroke-width="2" fill="none" class="text-emerald-400"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
              </div>
              <span class="font-bold truncate max-w-[150px] md:max-w-none">contact@enux.dev</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-[10px] text-zinc-500 font-['Architects_Daughter'] font-bold hidden md:block opacity-0 group-hover:opacity-100 transition-opacity translate-y-1 group-hover:translate-y-0 duration-300">{lang === 'es' ? '¡escríbeme!' : 'mail me!'}</span>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="opacity-0 group-hover:opacity-100 transition-opacity"><path d="M7 17l9.2-9.2M17 17V7H7"/></svg>
            </div>
          </a>
         </RoughBorder>

        <!-- Discord Tile -->
        <a href="https://discord.com/users/1014943324131561492" target="_blank" rel="noopener noreferrer" class="md:col-span-2 md:row-span-1 flex items-center justify-between p-4 rounded-3xl bg-zinc-900/60 border border-zinc-700/40 hover:bg-zinc-800/60 hover:-translate-y-1 transition-all duration-300 shadow-md group relative">
          <div class="flex items-center gap-3">
            <div class="p-3 bg-[#5865F2]/20 rounded-2xl group-hover:bg-[#5865F2]/40 transition-colors">
               <svg viewBox="0 0 256 199" width="20" height="20" fill="#5865F2"><path d="M216.856 16.597A208.502 208.502 0 0 0 164.042 0c-2.275 4.113-4.933 9.645-6.766 14.046-19.692-2.961-39.203-2.961-58.533 0-1.832-4.4-4.55-9.933-6.846-14.046a207.809 207.809 0 0 0-52.855 16.638C5.618 67.147-3.443 116.4 1.087 164.956c22.169 16.555 43.653 26.612 64.775 33.193A161.094 161.094 0 0 0 79.735 175.3a136.413 136.413 0 0 1-21.846-10.632 108.636 108.636 0 0 0 5.356-4.237c42.122 19.702 87.89 19.702 129.51 0a131.66 131.66 0 0 0 5.355 4.237 136.07 136.07 0 0 1-21.886 10.653c4.006 8.02 8.638 15.67 13.873 22.848 21.142-6.58 42.646-16.637 64.815-33.213 5.316-56.288-9.08-105.09-38.056-148.36ZM85.474 135.095c-12.645 0-23.015-11.805-23.015-26.18s10.149-26.2 23.015-26.2c12.867 0 23.236 11.804 23.015 26.2.02 14.375-10.148 26.18-23.015 26.18Zm85.051 0c-12.645 0-23.014-11.805-23.014-26.18s10.148-26.2 23.014-26.2c12.867 0 23.236 11.804 23.015 26.2 0 14.375-10.148 26.18-23.015 26.18Z"/></svg>
            </div>
            <div class="flex flex-col">
              <span class="text-xs uppercase tracking-tighter text-zinc-500 font-bold">Discord</span>
              <span class="font-mono text-sm group-hover:text-[#5865F2] transition-colors">cr.tkd</span>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-[10px] text-zinc-500 font-['Architects_Daughter'] font-bold hidden md:block opacity-0 group-hover:opacity-100 transition-opacity translate-y-1 group-hover:translate-y-0 duration-300">{lang === 'es' ? '¡saluda!' : 'say hi!'}</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="opacity-0 group-hover:opacity-100 transition-opacity"><path d="M7 17l9.2-9.2M17 17V7H7"/></svg>
          </div>
        </a>
      </div>
    </main>
  </body>
</html>
