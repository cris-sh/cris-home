---
interface Props {
  className?: string;
  color?: string;
  rotate?: string;
}

const { className = "", color = "currentColor", rotate = "0" } = Astro.props;
---

<div class={`absolute pointer-events-none ${className}`} style={`transform: rotate(${rotate}deg);`}>
  <svg
    width="100"
    height="60"
    viewBox="0 0 100 60"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M5 30C20 10 50 5 95 25M95 25L80 15M95 25L85 35"
      stroke={color}
      stroke-width="3"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="marker-path"
    />
  </svg>
</div>

<style>
  .marker-path {
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: draw 1s ease-out forwards;
  }

  @keyframes draw {
    to {
      stroke-dashoffset: 0;
    }
  }
</style>
