---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import FormattedDate from "../components/FormattedDate.astro";
import NavBar from "../components/navigation/NavBar.astro";
import MDXContent from "../components/MDXContent.astro";
import { Image } from "astro:assets";
import RoughBorder from "../components/creative/RoughBorder.astro";
import Scribble from "../components/creative/Scribble.astro";

type Props = CollectionEntry<"projects">["data"] & {
  lang?: string;
};

const {
  title,
  description,
  tags,
  date,
  updatedDate,
  heroImage,
  demoUrl,
  github,
  archived,
  lang = "en",
} = Astro.props;
---

<html lang={lang}>
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="bg-zinc-950 text-zinc-300 selection:bg-zinc-800 selection:text-zinc-100">
    <NavBar />

    <main class="container mx-auto px-4 max-w-4xl pb-40 md:pb-8">
      <article class="mt-12 md:mt-20">
        <!-- Hero section -->
        <header class="text-center mb-12">
          {
            archived && (
              <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-red-500/10 border border-red-500/20 text-red-400 text-xs font-medium mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                </svg>
                {lang === "es" ? "Proyecto Archivado" : "Archived Project"}
              </div>
            )
          }

          <div class="flex flex-wrap items-center justify-center gap-3 mb-6">
            <div class="px-3 py-1 rounded-full bg-zinc-800/40 backdrop-blur-md border border-zinc-700/50 text-zinc-400 text-sm">
              <FormattedDate date={date} lang={lang} />
            </div>
            {
              updatedDate && (
                <div class="px-3 py-1 rounded-full bg-zinc-800/40 backdrop-blur-md border border-zinc-700/50 text-zinc-400 text-sm italic">
                  {lang === "es" ? "Actualizado el " : "Updated: "}
                  <FormattedDate date={updatedDate} lang={lang} />
                </div>
              )
            }
          </div>

          <h1 class="text-5xl md:text-7xl font-bold tracking-tighter text-zinc-100 mb-6 balance">
            {title}
          </h1>
          
          <p class="text-xl text-zinc-400 max-w-2xl mx-auto mb-8 leading-relaxed">
            {description}
          </p>

          <div class="flex flex-wrap gap-2 justify-center mb-10">
            {
              tags.map((tag) => (
                <span class="px-2.5 py-0.5 rounded-md bg-zinc-800/50 border border-zinc-700/50 text-zinc-400 text-xs font-medium">
                  {tag}
                </span>
              ))
            }
          </div>

          <!-- Action buttons -->
          <div class="flex flex-wrap justify-center gap-4">
            {
              demoUrl && (
                <a
                  href={demoUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-6 py-2.5 rounded-xl bg-zinc-100 text-zinc-950 font-semibold hover:bg-zinc-200 transition-all duration-200 shadow-lg shadow-zinc-100/10"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                  </svg>
                  {lang === "es" ? "Ver demostración" : "View Demo"}
                </a>
              )
            }

            {
              github && (
                <a
                  href={github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-6 py-2.5 rounded-xl bg-zinc-800 border border-zinc-700 text-zinc-100 font-semibold hover:bg-zinc-700/80 transition-all duration-200"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                  {lang === "es" ? "Ver código" : "View Code"}
                </a>
              )
            }
          </div>
        </header>

        <!-- Hero image -->
        {
          heroImage && (
            <div class="mb-16 relative group">
              <RoughBorder>
                <div class="relative">
                  <Image
                    src={heroImage}
                    alt={title}
                    class="w-full h-auto object-cover rounded-3xl shadow-2xl border border-zinc-800/50"
                    loading="eager"
                    inferSize={true}
                  />
                  <Scribble type="circle" className="absolute -bottom-4 -left-4 text-indigo-500/30" size="40px" />
                  <Scribble type="plus" className="absolute -top-4 -right-4 text-indigo-500/30" size="30px" />
                </div>
              </RoughBorder>
            </div>
          )
        }

        <!-- Content Area -->
        <div class="bg-zinc-900/40 backdrop-blur-xl border border-zinc-800/50 p-8 md:p-12 rounded-3xl shadow-xl">
          <div class="prose prose-zinc prose-invert max-w-none 
            prose-h2:text-3xl prose-h2:tracking-tight prose-h2:text-zinc-100 prose-h2:font-bold prose-h2:border-b prose-h2:border-zinc-800/50 prose-h2:pb-2
            prose-h3:text-2xl prose-h3:tracking-tight prose-h3:text-zinc-200 prose-h3:font-semibold
            prose-p:text-zinc-400 prose-p:leading-relaxed
            prose-a:text-zinc-200 prose-a:underline-offset-4 prose-a:decoration-zinc-700 hover:prose-a:decoration-zinc-400 transition-all
            prose-code:text-zinc-200 prose-code:bg-zinc-800/50 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded-md prose-code:before:content-none prose-code:after:content-none
            prose-pre:bg-zinc-950 prose-pre:border prose-pre:border-zinc-800 prose-pre:rounded-2xl
            prose-img:rounded-2xl prose-img:shadow-lg">
            <MDXContent>
              <slot />
            </MDXContent>
          </div>
        </div>

        <!-- Navigation back -->
        <footer class="mt-12 mb-20 text-center">
          <a
            href={`/${lang}/projects/`}
            class="inline-flex items-center gap-2 text-zinc-500 hover:text-zinc-200 transition-colors px-4 py-2 rounded-xl hover:bg-zinc-900/50 border border-transparent hover:border-zinc-800"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            {lang === "es" ? "Volver a todos los proyectos" : "Back to all projects"}
          </a>
        </footer>
      </article>
    </main>
  </body>
</html>

