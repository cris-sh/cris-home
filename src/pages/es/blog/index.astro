---
import BaseHead from "../../../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../../components/FormattedDate.astro";
import NavBar from "../../../components/navigation/NavBar.astro";

const posts = (
  await getCollection("blog", (post) => {
    const matches =
      post.id.startsWith("es/") || !post.data.lang || post.data.lang === "es";
    return matches;
  })
).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const getSlug = (id: any) => {
  const parts = id.split("/");
  return parts.length > 1 ? parts[1] : id;
};
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      .hidden {
        display: none;
      }
    </style>
  </head>
  <body>
    <NavBar />
    <main class="container mx-auto px-4 max-w-4xl">
      {
        posts.length < 1 ? (
          <div class="text-center py-16">
            <h2 class="text-xl mb-2">no se encontraron articulos</h2>
            <p class="text-white/60">vuelve pronto</p>
          </div>
        ) : (
          <div class="space-y-8">
            {/* Primer post destacado */}
            {posts.length > 0 && (
              <div class="bg-black/20 border border-white/10 rounded-xl overflow-hidden hover:border-white/30 transition-all duration-300">
                <a
                  href={`/es/blog/${getSlug(posts[0].id)}/`}
                  class="block md:flex"
                >
                  <div class="md:w-1/2">
                    <img
                      src={posts[0].data.heroImage}
                      alt=""
                      class="w-full h-full object-cover"
                      height={360}
                      width={720}
                    />
                  </div>
                  <div class="p-5 md:w-1/2 flex flex-col justify-between">
                    <div>
                      <h3 class="text-xl font-semibold mb-3">
                        {posts[0].data.title}
                      </h3>
                      <p class="text-white/70 mb-4 line-clamp-3">
                        {posts[0].data.description}
                      </p>
                    </div>
                    <div class="text-sm text-white/60">
                      <FormattedDate date={posts[0].data.date} lang="en" />
                    </div>
                  </div>
                </a>
              </div>
            )}

            {/* Grid para el resto de posts */}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6">
              {posts.slice(1).map((post) => (
                <div class="bg-black/20 border border-white/10 rounded-xl overflow-hidden hover:border-white/30 transition-all duration-300">
                  <a href={`/es/blog/${getSlug(post.id)}/`} class="block">
                    <img
                      src={post.data.heroImage}
                      alt=""
                      class="w-full object-cover h-48"
                      height={360}
                      width={720}
                    />
                    <div class="p-5">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-xl font-semibold">{post.data.title}</h3>
                      </div>

                      <p class="text-white/70 mb-3 line-clamp-2">
                        {post.data.description}
                      </p>

                      <div class="text-sm text-white/60">
                        <FormattedDate date={post.data.date} lang="es" />
                      </div>
                    </div>
                  </a>
                </div>
              ))}
            </div>
          </div>
        )
      }
    </main>
  </body>
</html>
